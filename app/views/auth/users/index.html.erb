<div class="container">
  <div class="row">
      <div class="col-sm-12">
      <h1>用户列表</h1>
        <div class="panel panel-default">
          <table class="table table-striped table-bordered ">
            <thead>
                <tr class="info">
                  <th style="min-width: 30%" >账号名</th>
                  <th style="min-width: 20%" >名字</th>
                  <th style="min-width: 20%" >邮箱</th>
                  <th style="min-width: 10%" >第三方平台</th>
                  <th style="min-width: 10%" >角色</th>
                  <th style="min-width: 10%" >操作</th>
                </tr>
             </thead>

             <% @users.each_with_index do |user,index| %>
              <%tr_class= (index%2==0)? "class=success": ""%>
              <tr <%= tr_class%>>
                <td><%= user.username %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.provider %></td>
                <td><%= user.role.name %></td>

                <td><%= link_to 'Show', user %> | <%= link_to 'Edit', edit_user_path(user) %></td>
              </tr>
            <% end %>
          </table>

        </div>
        <div class="text-center">
          <ul class="pagination">
            <%= generate_pagination(total: @total,offset: @offset , limit: @limit)%>
          </ul>
        </div>
      </div>



  </div>
</div>

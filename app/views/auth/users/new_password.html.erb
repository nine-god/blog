<div class="container">
  <div class="row text-center" >
  <h2>忘记密码?</h2>

  <%= form_for(@user, url: reset_password_mail_users_path(@user), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label "邮箱:" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "发送密码重置邮件" %>
    </div>
  <% end %>
  </div><!--/row-->
</div><!--/.container-->
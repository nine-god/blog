<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="articles-index">
        <% @articles.each do |article| %>
          <article>
            <header>
              <h1><%= link_to article.title, article %> </h1>
            </header>
            <section>
              <p >
              <%= generate_abstract_tag(article.text,300) + (link_to " Â» ", article) %>
              </p>
            </section>
            <footer>
              <p class="blog-post-meta"> <%= link_to  article.user.name , user_path(article.user_id) , {class: ""} %> | <%= change_time_style article.created_at  %> </p>
            </footer>
          </article>
          <% if @articles.last != article %>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div> <!-- /.col-md-12 -->
  </div><!-- /.row -->

</div>
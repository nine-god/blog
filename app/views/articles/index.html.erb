<div class="container">
  <div class="row">
    <div class="blog-main col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
        <article>
          <header>
            <h1><%= link_to article.title, article %> </h1>
          </header>
          <section>
            <p >
            <%= article.text[0..200]+"..."%>
            </p>
          </section>
          <footer>
            <p class="blog-post-meta"> <%= link_to  article.user.name , home_about_path , {class: ""} %> | <%= article.created_at  %> </p>
          </footer>
        </article>
        <% if @articles.last != article %>
          <hr>
        <% end %>
      <% end %>
    </div>
  </div><!-- /.row -->

</div>
<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field article-header">
      <%= form.text_field :title, {id: :article_title , class: "form-control h1 text-center" ,placeholder: "填写标题名称"} %>
  </div>

  <%= render 'shared/editor_toolbar'%>
  <div class="field">
    <%= form.text_area :text, {id: :article_text , class: "form-control",placeholder: "仅支持Markdown格式填写内容",rows: 10} %>
  </div>



  <div class="actions">
    <%= form.submit "保存" ,{class: "btn btn-default"} %>   
    <%= link_to '取消', article.id.nil? ? articles_path : article , {class: "btn btn-default"} %> 
    
  </div>
<% end %>
